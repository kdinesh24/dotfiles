[core]
  compression  = 9
  whitespace   = error
  preloadindex = true

[advice]
  addEmptyPathspec   = false
  pushNonFastForward = false
  statusHints        = false

[branch]
    sort = -committerdate

[color "diff"]
    commit     = yellow
    context    = white
    frag       = magenta bold
    meta       = blue bold
    new        = green
    old        = red
    whitespace = red reverse
  
[color "diff-highlight"]
    newHighlight = "#5de4c7 #303340"
    newNormal    = "#5de4c7"
    oldHighlight = "#d0679d #303340"
    oldNormal    = "#d0679d"


[diff]
    context          = 3
    interHunkContext = 10
    renames          = copies

[diff-so-fancy]
    markEmptyLines = false


[interactive]
    diffFilter = diff-so-fancy --patch
    singlekey  = true

[pager]
    branch = false
    diff   = diff-so-fancy | $PAGER
    tag    = false

[pull]
    default = current
    rebase  = true

[push]
    autoSetupRemote = true
    default         = current
    followTags      = true

[rebase]
    autoStash           = true
    missingCommitsCheck = warn

[tag]
    sort = -taggerdate

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
